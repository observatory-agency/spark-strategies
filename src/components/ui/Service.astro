---
import { Picture } from '@astrojs/image/components';

const { spark, service, description, link, img, sparkle, alt } = Astro.props;
---

<div class="relative mt-12 lg:mt-24 lg:grid lg:grid-cols-2 lg:gap-24 lg:items-center">
    <div class="relative flow">
        <h2 class="text-lg font-bold uppercase text-sparkRaspberry">{spark}</h2>
        <h4
            class="text-3xl font-bold leading-8 tracking-tight text-sparkHeader sm:text-3xl sm:leading-9 dash-trail"
        >
            {service}
        </h4>
        <p class="mt-3 text-lg text-sparkBody">
            {description}
        </p>
        <a
            href={link}
            target="_blank"
            rel="noopener"
            class="inline-block px-4 py-2 mt-4 text-lg border rounded-md text-sparkBlue hover:bg-sparkBlue hover:text-white border-sparkBlue"
            >Learn more</a>
    </div>
    <div class="relative mt-10 lg:mt-0">
        <Picture src={`/services/${img}.jpg`} alt={alt} widths={[400, 800, 1200]} sizes="(max-width: 800px) 100vw, 800px" aspectRatio="3:2" class="object-cover object-center mx-auto rounded-lg shadow-xl"/>
    </div>
</div>
