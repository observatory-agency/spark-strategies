---
import { storyblokEditable, renderRichText } from '@storyblok/astro';
import { Picture } from '@astrojs/image/components';
import ActionBox from '../components/ui/ActionBox.astro';
import SparkLogo from '../components/SparkLogo.astro';
import Nicole from '../img/team/nicole.jpg';
import Jenn from '../img/team/jenn.jpg';
import Aida from '../img/team/aida.jpg';
import Teresa from '../img/team/teresa.jpg';
import Allison from '../img/team/allison.webp';
import Pete from '../img/team/pl.jpg';

const { blok } = Astro.props;
const content = renderRichText(blok.content);

let days = [
    {
        day: '1',
        title: 'Handy Links',
        description:
            'Important links like how to access and use ClickUp, Google Drive and the Spark Resource Library',
    },
    {
        day: '2',
        title: 'Meet our team',
        description: 'An introduction to our team',
    },
    {
        day: '3',
        title: 'Booking a session',
        description: 'How to book your first call on Nicole’s private calendar ',
    },
    {
        day: '4',
        title: 'Your deliverables',
        description: 'The deliverables you can expect from us',
    },
];

let teamz = [
    {
        name: 'Nicole D’Andrea',
        title: 'Founder, Business Coach',
        image: Nicole,
    },
    {
        name: 'Allison Jones',
        title: 'Operations Manager',
        image: Allison,
    },
    {
        name: 'Teresa Zanardelli',
        title: 'Client Success Manager',
        image: Teresa,
    },
    {
        name: 'Jenn Morrison',
        title: 'Client Success Manager',
        image: Jenn,
    },
    {
        name: 'Pete Lloyd',
        title: 'Client Success Manager',
        image: Pete,
    },
    {
        name: 'Aida Solomon',
        title: 'Client Success Manager',
        image: Aida,
    },
];
---

<header class="bg-sparkHeader" {...storyblokEditable(blok)}>
    <nav
        class="flex items-center justify-between p-6 mx-auto max-w-7xl lg:px-8"
        aria-label="Global"
    >
        <div class="flex flex-1">
            <div class="hidden lg:flex lg:gap-x-12">
                <a href="#" class="font-semibold leading-6 text-sparkPeach">Welcome</a>
                <a href="#" class="font-semibold leading-6 text-sparkPeach">First Steps</a>
                <a href="#" class="font-semibold leading-6 text-sparkPeach">Our Team</a>
            </div>
            <div class="flex lg:hidden">
                <button
                    type="button"
                    class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
                >
                    <span class="sr-only">Open main menu</span>
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
                    </svg>
                </button>
            </div>
        </div>
        <div class="flex items-center space-x-4">
            <span class="sr-only">Your Company</span>
            <img class="w-24" src={blok.client_logo.filename} alt={blok.client_name} />
            <span class="text-xl text-sparkOrange">+</span>
            <span class="sr-only">Your Company</span>
            <SparkLogo width="w-24" />
        </div>
        <div class="flex justify-end flex-1">
            <a href="#" class="font-semibold leading-6 text-sparkPeach"
                >Get started <span aria-hidden="true">&rarr;</span></a
            >
        </div>
    </nav>
    <!-- Mobile menu, show/hide based on menu open state. -->
    <div class="lg:hidden" role="dialog" aria-modal="true">
        <!-- Background backdrop, show/hide based on slide-over state. -->
        <div class="fixed inset-0 z-10"></div>
        <div class="fixed inset-y-0 left-0 z-10 w-full px-6 py-6 overflow-y-auto bg-white">
            <div class="flex items-center justify-between">
                <div class="flex flex-1">
                    <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
                        <span class="sr-only">Close menu</span>
                        <svg
                            class="w-6 h-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            aria-hidden="true"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                <a href="#" class="-m-1.5 p-1.5">
                    <span class="sr-only">Your Company</span>
                    <img
                        class="w-auto h-8"
                        src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600"
                        alt=""
                    />
                </a>
                <div class="flex justify-end flex-1">
                    <a href="#" class="text-sm font-semibold leading-6 text-gray-900"
                        >Log in <span aria-hidden="true">&rarr;</span></a
                    >
                </div>
            </div>
            <div class="mt-6 space-y-2">
                <a
                    href="#"
                    class="block px-3 py-2 -mx-3 text-base font-semibold leading-7 text-gray-900 rounded-lg hover:bg-gray-50"
                    >Product</a
                >
                <a
                    href="#"
                    class="block px-3 py-2 -mx-3 text-base font-semibold leading-7 text-gray-900 rounded-lg hover:bg-gray-50"
                    >Features</a
                >
                <a
                    href="#"
                    class="block px-3 py-2 -mx-3 text-base font-semibold leading-7 text-gray-900 rounded-lg hover:bg-gray-50"
                    >Company</a
                >
            </div>
        </div>
    </div>
</header>

<main {...storyblokEditable(blok)}>
    <!-- Hero -->
    <section>
        <div class="relative isolate">
            <div class="overflow-hidden">
                <div class="px-6 pb-32 mx-auto max-w-7xl pt-36 sm:pt-60 lg:px-8 lg:pt-32">
                    <div
                        class="max-w-2xl mx-auto gap-x-14 lg:mx-0 lg:flex lg:max-w-none lg:items-center"
                    >
                        <div class="w-full max-w-xl lg:shrink-0 xl:max-w-2xl">
                            <h1
                                class="text-4xl font-bold tracking-tight text-sparkHeader font-display sm:text-7xl"
                            >
                                {blok.hero_title}
                            </h1>
                            <p
                                class="relative mt-6 text-2xl leading-8 text-sparkBody sm:max-w-md lg:max-w-none"
                            >
                                {blok.hero_subtitle}
                            </p>
                            <p
                                class="relative mt-6 text-lg leading-8 text-sparkBody sm:max-w-md lg:max-w-none"
                            >
                                {blok.hero_copy}
                            </p>
                            <div class="relative flex items-center mt-16 gap-x-6">
                                <a
                                    href={blok.hero_loom_link.url}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="rounded-md pulse bg-sparkRaspberry px-6 py-2.5 font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                                    >A message from Nicole!</a
                                >
                                <div class="absolute -top-8 -left-8 text-sparkOrange">
                                    <span class="font-bold">click me!</span>
                                </div>
                            </div>
                        </div>
                        <div
                            class="flex justify-end gap-8 mt-14 sm:-mt-44 sm:justify-start sm:pl-20 lg:mt-0 lg:pl-0"
                        >
                            <div
                                class="flex-none w-56 pt-32 ml-auto space-y-8 sm:ml-0 sm:pt-80 lg:order-last lg:pt-36 xl:order-none xl:pt-72"
                            >
                                <div class="relative">
                                    <img
                                        src="/onboarding/hero-1.png"
                                        alt=""
                                        class="object-cover w-full h-full shadow-lg aspect-1 rounded-xl bg-gray-900/5"
                                    />
                                    <div
                                        class="absolute inset-0 pointer-events-none rounded-xl ring-1 ring-inset ring-gray-900/10"
                                    >
                                    </div>
                                </div>
                            </div>
                            <div class="flex-none w-56 mr-auto space-y-8 sm:mr-0 sm:pt-52 lg:pt-36">
                                <div class="relative">
                                    <img
                                        src="/onboarding/hero-2.png"
                                        alt=""
                                        class="object-cover w-full h-full shadow-lg aspect-1 rounded-xl bg-gray-900/5"
                                    />
                                    <div
                                        class="absolute inset-0 pointer-events-none rounded-xl ring-1 ring-inset ring-gray-900/10"
                                    >
                                    </div>
                                </div>
                                <div class="relative">
                                    <img
                                        src="/onboarding/hero-3.png"
                                        alt=""
                                        class="object-cover w-full h-full shadow-lg aspect-1 rounded-xl bg-gray-900/5"
                                    />
                                    <div
                                        class="absolute inset-0 pointer-events-none rounded-xl ring-1 ring-inset ring-gray-900/10"
                                    >
                                    </div>
                                </div>
                            </div>
                            <div class="flex-none w-56 pt-32 space-y-8 sm:pt-0">
                                <div class="relative">
                                    <img
                                        src="/onboarding/hero-4.png"
                                        alt=""
                                        class="object-cover w-full h-full shadow-lg aspect-1 rounded-xl bg-gray-900/5"
                                    />
                                    <div
                                        class="absolute inset-0 pointer-events-none rounded-xl ring-1 ring-inset ring-gray-900/10"
                                    >
                                    </div>
                                </div>
                                <div class="relative">
                                    <img
                                        src="/onboarding/hero-5.png"
                                        alt=""
                                        class="object-cover w-full h-full shadow-lg aspect-1 rounded-xl bg-gray-900/5"
                                    />
                                    <div
                                        class="absolute inset-0 pointer-events-none rounded-xl ring-1 ring-inset ring-gray-900/10"
                                    >
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Steps -->
    <section id="profitable-studio-masterclass" class="relative py-12 bg sm:py-24 scroll-mt-16">
        <div class="max-w-4xl px-4 mx-auto sm:text-center flow">
            <h2 class="text-3xl font-extrabold sm:text-5xl text-sparkHeader">
                This personalized onboarding page will walk you through our next steps.
            </h2>
        </div>
        <div class="max-w-6xl px-4 mx-auto mt-6 sm:mt-12">
            <div class="flex flex-col gap-4 lg:gap-36">
                {
                    days.map((day) => (
                        <aside class="relative flex items-baseline max-w-lg gap-4 py-6 even:self-end">
                            <span class="text-6xl font-semibold uppercase text-sparkRaspberry">
                                {day.day}
                            </span>
                            <div>
                                <h4 class="text-2xl font-bold sm:text-3xl text-sparkHeader">
                                    {day.title}
                                </h4>
                                <p class="text-sparkBody">{day.description}</p>
                            </div>
                        </aside>
                    ))
                }
                <div class="self-center mt-12">
                    <ActionBox>
                        <div class="flow">
                            <p class="text-lg leading-normal text-center text-sparkBody sm:text-xl">
                                A sincere thank you for trusting us with this process. We know that
                                investing in your business (and yourself!) is a massive step, and
                                we’re thrilled to be part of your journey.
                            </p>
                            <p class="text-4xl text-center font-display">
                                To your brilliant future!
                            </p>
                            <span class="block text-center text-sparkBody"
                                ><span class="mb-1 text-5xl script text-sparkHeader">Nicole</span>
                                <br /> &amp; the Spark Strategies Team</span
                            >
                        </div>
                    </ActionBox>
                </div>
            </div>
        </div>
    </section>
    <!-- Team -->
    <section class="py-16 bg-white sm:py-20">
        <div class="grid grid-cols-1 gap-20 px-6 mx-auto max-w-7xl lg:px-8 xl:grid-cols-3">
            <div class="max-w-2xl mx-auto lg:mx-0">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
                    Our team
                </h2>
                <p class="mt-6 text-lg leading-8 text-gray-600">
                    Consider us your built-in team. Lean on us for support and guidance - the more
                    communication, the better! Some of our clients’ best results happen between
                    phone calls, so be sure to take advantage of all of the resources available to
                    you.
                </p>
            </div>
            <ul
                role="list"
                class="grid max-w-2xl grid-cols-1 mx-auto gap-x-6 gap-y-20 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:gap-x-8 xl:col-span-2"
            >
                {
                    teamz.map((team) => (
                        <li>
                            <Picture
                                src={team.image}
                                alt="Nicole"
                                widths={[400, 800, 1200]}
                                sizes="(max-width: 800px) 100vw, 800px"
                                aspectRatio="3:2"
                                class="object-cover object-bottom rounded-2xl"
                            />
                            <h3 class="mt-6 text-lg font-semibold leading-8 text-gray-900">
                                {team.name}
                            </h3>
                            <p class="text-base leading-7 text-gray-600">{team.title}</p>
                        </li>
                    ))
                }
            </ul>
        </div>
    </section>
    <!-- Handy Links -->
    <section class="py-16 bg-white sm:py-20">
        <div class="px-6 mx-auto max-w-7xl lg:px-8">
            <div class="max-w-2xl mx-auto lg:mx-0">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
                    Handy Links
                </h2>
                <p class="mt-6 text-lg leading-8 text-gray-600">
                    All the information you need is in the following three places:
                </p>
            </div>
            <div class="max-w-2xl mx-auto mt-16 sm:mt-20 lg:mt-24 lg:max-w-none">
                <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
                    <div class="flex flex-col">
                        <dt class="text-xl font-semibold leading-7 text-gray-900">
                            <div
                                class="flex items-center justify-center w-10 h-10 mb-6 rounded-lg bg-sparkOrange"
                            >
                                <svg
                                    class="w-6 h-6 text-sparkBody"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"
                                    aria-hidden="true"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M2.25 13.5h3.86a2.25 2.25 0 012.012 1.244l.256.512a2.25 2.25 0 002.013 1.244h3.218a2.25 2.25 0 002.013-1.244l.256-.512a2.25 2.25 0 012.013-1.244h3.859m-19.5.338V18a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18v-4.162c0-.224-.034-.447-.1-.661L19.24 5.338a2.25 2.25 0 00-2.15-1.588H6.911a2.25 2.25 0 00-2.15 1.588L2.35 13.177a2.25 2.25 0 00-.1.661z"
                                    ></path>
                                </svg>
                            </div>
                            Clickup
                        </dt>
                        <dd class="flex flex-col flex-auto mt-1 text-base leading-7 text-gray-600">
                            <p class="flex-auto">
                                With ClickUp, our team will track and manage tasks, set goals, and
                                report on progress. It will help us stay organized and ensure a
                                smooth, efficient workflow throughout our partnership.
                            </p>
                            <p class="mt-6">
                                <a href="#" class="text-base font-semibold leading-6 text-sparkBlue"
                                    >Head over to ClickUp<span aria-hidden="true">→</span></a
                                >
                            </p>
                        </dd>
                    </div>
                    <div class="flex flex-col">
                        <dt class="text-xl font-semibold leading-7 text-gray-900">
                            <div
                                class="flex items-center justify-center w-10 h-10 mb-6 rounded-lg bg-sparkOrange"
                            >
                                <svg
                                    class="w-6 h-6 text-sparkBody"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"
                                    aria-hidden="true"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z"
                                    ></path>
                                </svg>
                            </div>
                            Google Drive
                        </dt>
                        <dd class="flex flex-col flex-auto mt-1 text-base leading-7 text-gray-600">
                            <p class="flex-auto">
                                Google Drive will help us keep all our project-related digital
                                assets organized and accessible, facilitating efficient
                                collaboration and information sharing.
                            </p>
                            <p class="mt-6">
                                <a href="#" class="text-base font-semibold leading-6 text-sparkBlue"
                                    >Checkout your new Google Drive <span aria-hidden="true">→</span
                                    ></a
                                >
                            </p>
                        </dd>
                    </div>
                    <div class="flex flex-col">
                        <dt class="text-xl font-semibold leading-7 text-gray-900">
                            <div
                                class="flex items-center justify-center w-10 h-10 mb-6 rounded-lg bg-sparkOrange"
                            >
                                <svg
                                    class="w-6 h-6 text-sparkBody"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"
                                    aria-hidden="true"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
                                    ></path>
                                </svg>
                            </div>
                            Resource Library
                        </dt>
                        <dd class="flex flex-col flex-auto mt-1 text-base leading-7 text-gray-600">
                            <p class="flex-auto">
                                Our Resource Library houses a wealth of educational guides,
                                spreadsheets and videos to help you on your entrepreneurial journey.
                                Ranging from how-tos to informative webinars to tutorials, these
                                resources will provide valuable insights and knowledge at your
                                fingertips.
                            </p>
                            <p class="mt-6">
                                <a
                                    href="https://resources.sparkstrategies.co/"
                                    class="text-base font-semibold leading-6 text-sparkBlue"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    >Dive into the Resource Library <span aria-hidden="true">→</span
                                    ></a
                                >
                            </p>
                        </dd>
                    </div>
                </dl>
            </div>
        </div>
    </section>
    <!-- Book session -->
    <section class="py-16 overflow-hidden bg-white sm:py-20">
        <div class="mx-auto max-w-7xl md:px-6 lg:px-8">
            <div
                class="grid grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:grid-cols-2 lg:items-start"
            >
                <div class="px-6 lg:px-0 lg:pr-4 lg:pt-4">
                    <div class="max-w-2xl mx-auto lg:mx-0 lg:max-w-lg">
                        <h2 class="text-base font-semibold leading-7 text-sparkBlue">
                            Getting started
                        </h2>
                        <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
                            Pre-Coaching Work and Booking a Session
                        </p>
                        <p class="mt-6 text-lg leading-8 text-gray-600">
                            First things first: complete this Pre-Coaching Deep Dive ahead of your
                            first call. This is a weighty document, and we ask that you give it
                            thought and care. If you don't know the answer to a question, look it up
                            or send us a message - the more detail, the better. This Deep Dive
                            allows us to maximize our understanding of your business, its operations
                            and its current state, and is critical to our consulting process. Once
                            you've completed your Deep Dive, you're ready to book your first call!
                        </p>
                        <a
                            href="/book-a-free-60-minute-studio-strategy-session"
                            target="_blank"
                            class="items-center hidden px-8 py-2 mt-12 font-semibold tracking-widest rounded shadow-sm sm:inline-flex text-sparkPeach bg-sparkRaspberry font-body border-secondaryColor text-secondaryColor hover:bg-sparkRaspberry/80 focus:outline-none focus:ring-2 focus:ring-sparkRaspberry focus:ring-offset-2"
                        >
                            Pre-Coaching Deep Dive
                        </a>
                    </div>
                </div>
                <div class="sm:px-6 lg:px-0">
                    <div
                        class="relative px-6 pt-8 overflow-hidden isolate bg-sparkRaspberry sm:mx-auto sm:max-w-2xl sm:rounded-3xl sm:pl-16 sm:pr-0 sm:pt-16 lg:mx-0 lg:max-w-none"
                    >
                        <div
                            class="absolute -inset-y-px -left-3 -z-10 w-full origin-bottom-left skew-x-[-30deg] bg-sparkOrange/90 opacity-40 ring-1 ring-inset ring-white"
                            aria-hidden="true"
                        >
                        </div>
                        <div class="max-w-2xl mx-auto sm:mx-0 sm:max-w-none">
                            <img
                                src="/calendar.png"
                                alt="Product screenshot"
                                width="2432"
                                height="1442"
                                class="-mb-12 w-[57rem] max-w-none rounded-tl-xl bg-gray-800 ring-1 ring-white/10"
                            />
                        </div>
                        <div
                            class="absolute inset-0 pointer-events-none ring-1 ring-inset ring-black/10 sm:rounded-3xl"
                            aria-hidden="true"
                        >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style lang="scss">
    .pulse {
        transform: scale(1);
        animation: pulse-btn 2s infinite;
    }

    @keyframes pulse-btn {
        0% {
            transform: scale(0.95);
            box-shadow: 0 0 0 0 rgba(232, 72, 83, 0.7);
        }

        70% {
            transform: scale(1);
            box-shadow: 0 0 0 10px rgba(0, 0, 0, 0);
        }

        100% {
            transform: scale(0.95);
            box-shadow: 0 0 0 0 rgba(0, 0, 0, 0);
        }
    }

    .bg::before {
        content: ' ';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        background-image: url('/patterns/spark-pattern.svg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    aside {
