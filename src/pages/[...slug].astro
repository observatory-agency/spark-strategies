---
import Layout from '../layouts/Layout.astro';
import { useStoryblokApi } from '@storyblok/astro';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

export async function getStaticPaths() {
    const { client, accessToken } = useStoryblokApi()
    const { data } = await client.get('cdn/stories/', {
        params: {
            version: 'published',
            token: accessToken,
        }
    });
    const pages = data.stories.map((story) => {
        return {
            params: {
                slug: story.full_slug === 'blog-home' ? 'blog' : story.full_slug,
            },
            props: {
                content: story.content,
                title: story.name
            },
        };
    });
    console.log(pages);
    return pages;
}
const { content } = Astro.props;
---

<Layout title={`${content.title} | Spark Strategies`}>
    <StoryblokComponent blok={content} />
</Layout>
