---
import Layout from '../layouts/Layout.astro';

import { useStoryblokApi } from '@storyblok/astro';

const storyblokApi = useStoryblokApi();
const { data } = await storyblokApi.get('cdn/stories/media-library', {
    version: 'published',
});

let { content } = data.story;
let media = content.body;
---

<Layout>
    <main class="mx-auto mt-28 sm:mt-32 max-w-7xl">
        <section class="mt-32">
            <h1 class="text-3xl font-extrabold text-center text-gray-900 font-display sm:text-4xl">
                Media Library
            </h1>
            <div class="grid gap-6 px-4 mx-auto mt-8 xl:grid-cols-3 max-w-7xl sm:px-6 md:px-8">
                {
                    media.map((item) => {
                        return (
                            <a href={item.Link.url} target="_blank" rel="noreferrer">
                                <div class="transition duration-300 ease-in-out transform rounded-lg hover:shadow-xl hover:scale-[1.01] hover:translate-x-1.5 hover:translate-y-1.5">
                                    <div class="overflow-hidden bg-white divide-y divide-gray-200 rounded-lg shadow">
                                        <div>
                                            <img
                                                src={item.Image.filename}
                                                alt={item.Name}
                                                class="object-cover object-center w-full h-56"
                                            />
                                        </div>
                                        <div class="px-4 py-5 space-y-4 sm:p-6">
                                            <span class="inline-flex items-center rounded-full bg-sparkHeader px-3 py-0.5 text-sm font-medium text-white">
                                                {item.Category}
                                            </span>
                                            <div>
                                                <h3 class="text-lg font-medium leading-6 2xl:text-xl text-sparkHeader">
                                                    {item.Name}
                                                </h3>
                                                <p class="max-w-2xl mt-2 text-sparkBody/80 line-clamp-4">
                                                    {item.Description.content[0].content[0].text}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        );
                    })
                }
            </div>
        </section>
        <section class="mt-32">
            <div class="py-24 sm:py-32 lg:py-40">
                <div class="px-6 mx-auto max-w-7xl lg:px-8">
                    <div class="sm:text-center">
                        <h2 class="text-lg font-semibold leading-8 text-sparkBlue">
                            Business Development Presentations
                        </h2>
                        <p
                            class="mt-2 text-3xl max-w-[767px] mx-auto font-bold tracking-tight text-gray-900"
                        >
                            Invite Spark Strategies Founder Nicole D’Andrea to speak at your live or
                            virtual event
                        </p>
                        <p class="max-w-2xl mx-auto mt-6 text-lg leading-8 text-gray-600">
                            For business education or speaking inquiries, please contact
                            info@sparkstrategies.co
                        </p>
                    </div>

                    <div class="max-w-lg mt-20 sm:mx-auto md:max-w-none">
                        <div
                            class="grid grid-cols-1 gap-y-16 md:grid-cols-3 md:gap-x-12 md:gap-y-16"
                        >
                            <div class="relative flex flex-col gap-6">
                                <div
                                    class="flex items-center justify-center w-12 h-12 text-white rounded-xl bg-sparkBlue sm:shrink-0"
                                >
                                    <!-- Heroicon name: outline/globe-alt -->
                                    <svg
                                        class="w-8 h-8"
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="1.5"
                                        stroke="currentColor"
                                        aria-hidden="true"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="sm:min-w-0 sm:flex-1">
                                    <p class="text-lg font-semibold leading-8 text-gray-900">
                                        Sales School
                                    </p>
                                    <p class="mt-2 text-base leading-7 text-gray-600">
                                        Building a Client-Centric Sales Process that Converts
                                    </p>
                                </div>
                            </div>

                            <div class="relative flex flex-col gap-6">
                                <div
                                    class="flex items-center justify-center w-12 h-12 text-white rounded-xl bg-sparkBlue sm:shrink-0"
                                >
                                    <!-- Heroicon name: outline/scale -->
                                    <svg
                                        class="w-8 h-8"
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="1.5"
                                        stroke="currentColor"
                                        aria-hidden="true"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M12 3v17.25m0 0c-1.472 0-2.882.265-4.185.75M12 20.25c1.472 0 2.882.265 4.185.75M18.75 4.97A48.416 48.416 0 0012 4.5c-2.291 0-4.545.16-6.75.47m13.5 0c1.01.143 2.01.317 3 .52m-3-.52l2.62 10.726c.122.499-.106 1.028-.589 1.202a5.988 5.988 0 01-2.031.352 5.988 5.988 0 01-2.031-.352c-.483-.174-.711-.703-.59-1.202L18.75 4.971zm-16.5.52c.99-.203 1.99-.377 3-.52m0 0l2.62 10.726c.122.499-.106 1.028-.589 1.202a5.989 5.989 0 01-2.031.352 5.989 5.989 0 01-2.031-.352c-.483-.174-.711-.703-.59-1.202L5.25 4.971z"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="sm:min-w-0 sm:flex-1">
                                    <p class="text-lg font-semibold leading-8 text-gray-900">
                                        Small Business, Big Profits
                                    </p>
                                    <p class="mt-2 text-base leading-7 text-gray-600">
                                        Growth Strategies for Main Street Studios
                                    </p>
                                </div>
                            </div>

                            <div class="relative flex flex-col gap-6">
                                <div
                                    class="flex items-center justify-center w-12 h-12 text-white rounded-xl bg-sparkBlue sm:shrink-0"
                                >
                                    <!-- Heroicon name: outline/bolt -->
                                    <svg
                                        class="w-8 h-8"
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="1.5"
                                        stroke="currentColor"
                                        aria-hidden="true"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="sm:min-w-0 sm:flex-1">
                                    <p class="text-lg font-semibold leading-8 text-gray-900">
                                        Clarity Coaching for Entrepreneurs
                                    </p>
                                    <p class="mt-2 text-base leading-7 text-gray-600">
                                        Charting Your Business’ Next Steps
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
